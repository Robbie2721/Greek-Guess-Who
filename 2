    ranChar = random.choice(char)
    if ranChar == "zeus":
        maxScore = maxScore + 5
        q1 = input("HINT: One of the Olympian Gods").lower()
        if q1 == ranChar:
            score = score + 5 
            print("Correct!")
            replay()
        else:
            q1 = input("Incorrect. HINT: They are one of the chilren of Rhea and Kronus.").lower()
            if q1 == ranChar:
                score = score + 4
                print("Correct!")
                replay()
