import random
char = ["zeus", "hera", "aphrodite", "apollo", "ares", "artemis", "athena", "hades", "hermes", "poseidon", "demeter", "hephaestus", "hestia", "helios", "hercules", "helen", "jason", "orion", "perseus"]
score = 0
maxScore = 0
def replay():
    c = input("Would you like to play again? (Y)es or (N)o").lower()
    if c == "y":
        main()
    else:
        global score
        global maxScore
        score = str(score)
        maxScore = str(maxScore)
        print("Game over. You ended up with a score of " + score + " out of " + maxScore)

def main():
    global maxScore
    global score
    print("Welcome to the Greek Mythology Guess Who Game!")
    print("A random character will be selected, then it will give hints. The more hints it takes to guess the character the less points you will earn.")
